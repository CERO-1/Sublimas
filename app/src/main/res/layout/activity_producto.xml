<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:orientation="vertical"
    android:layout_width="match_parent"

    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <FrameLayout
        android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ProgressBar
            android:visibility="gone"
            android:layout_gravity="center"
            android:id="@+id/progress_circular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </FrameLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/back"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:src="@drawable/regresa"
                android:background="@color/soliddd"/>

            <Button
                android:id="@+id/txtdatos"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/btnsignin_gradient"
                android:text="Subir de Producto"
                android:textColor="#FFFFFF" />

        </LinearLayout>
    <ImageView
        android:id="@+id/subirimagen"
        android:scaleType="fitXY"
        android:src="@drawable/imagenes1"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        />
    <LinearLayout
        android:padding="40dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <EditText
            android:layout_marginTop="20dp"
            android:inputType="textAutoComplete"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/codigoedi"
            android:background="@drawable/edittext_background"
            android:drawablePadding="10dp"
            android:hint="Codigo del producto"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:textColor="@color/soliddd"
            android:textColorHint="@color/grey"
            android:textSize="15sp" />
        <EditText
            android:inputType="textAutoComplete"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/categoriaedi"
            android:background="@drawable/edittext_background"
            android:drawablePadding="10dp"
            android:hint="Categoria del producto"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:textColor="@color/soliddd"
            android:textColorHint="@color/grey"
            android:textSize="15sp" />
        <EditText
            android:inputType="textAutoComplete"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/cantidadEdid"
            android:background="@drawable/edittext_background"
            android:drawablePadding="10dp"
            android:hint="Cantidad del producto"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:textColor="@color/soliddd"
            android:textColorHint="@color/grey"
            android:textSize="15sp" />
        <EditText
            android:inputType="textAutoComplete"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/nombreedi"
            android:background="@drawable/edittext_background"
            android:drawablePadding="10dp"
            android:hint="Nombre del producto"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:textColor="@color/soliddd"
            android:textColorHint="@color/grey"
            android:textSize="15sp" />

        <EditText
            android:inputType="textAutoComplete"
            android:id="@+id/descripedi"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/edittext_background"
            android:drawablePadding="10dp"
            android:hint="descripcion "
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:textColor="@color/soliddd"
            android:textColorHint="@color/grey"
            android:textSize="15sp" />


        <AutoCompleteTextView
            android:inputType="number"
            android:id="@+id/precioedi"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/edittext_background"
            android:drawablePadding="10dp"
            android:hint="Precio "
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:textColor="@color/soliddd"
            android:textColorHint="@color/grey"
            android:textSize="15sp" />
        <AutoCompleteTextView
            android:inputType="text"
            android:id="@+id/caracteriticaedi"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/edittext_background"
            android:drawablePadding="10dp"
            android:hint="Caracteristicas"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:textColor="@color/soliddd"
            android:textColorHint="@color/grey"
            android:textSize="15sp" />
            <Button
            android:id="@+id/uploadButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@drawable/btnsignup_gradient"
            android:text="Subir Producto"
            android:layout_marginBottom="10dp"
            android:textColor="#FFFFFF" />

    </LinearLayout>

    </LinearLayout>
</FrameLayout>


