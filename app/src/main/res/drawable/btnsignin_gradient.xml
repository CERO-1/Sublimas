<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <gradient

                android:startColor="#9951A2F4"
                android:endColor="#A0F3E7"
                android:angle="0" />


            <corners
                android:radius="4dp" />

            <padding
                android:right="10dp"
                android:top="10dp"
                android:bottom="10dp"
                android:left="10dp" />

        </shape>
    </item>


    <item>
        <shape>
            <gradient

                android:startColor="#69E3F8"
                android:endColor="@color/black_transparent_30"
                android:angle="0" />


            <corners
                android:radius="4dp" />

            <padding
                android:right="10dp"
                android:top="10dp"
                android:bottom="10dp"
                android:left="10dp" />

        </shape>
    </item>



</selector>